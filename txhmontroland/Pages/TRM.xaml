                                <Setter Property="BorderBrush" Value="Black" />
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Label
                Content="TRM"
                FontFamily="Arial"
                FontSize="20"
                Grid.Column="1"
                Grid.RowSpan="2"
                Height="34"
                HorizontalAlignment="Left"
                Margin="33,8,0,0"
                VerticalAlignment="Top"
                Width="63" />
            <Button
                Background="#FFA643B1"
                Click="Button_Click"
                Content="PDF"
                Grid.Column="2"
                Grid.Row="1"
                Height="11"
                HorizontalAlignment="Right"
                Margin="0,4,0,0"
                VerticalAlignment="Top"
                Width="87" 
                Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Page>
